@using WeatherApp.MVC.Controllers
@model List<WeatherApp.MVC.Controllers.News>

@{
	var newsList = ViewBag.NewsList as List<News>;
}

<div class="fullwidth-block" data-bg-color="#262936" style="background-color: rgb(38, 41, 54); margin-top: 40px;">
	<div style="text-align: center; background-color: rgb(33, 34, 37); width: 100%;">
		<h2 style="color: aliceblue;padding: 20px;">Hava Durumu Haberleri</h2>
	</div>
	<div style="padding: 0% 11%;">

		<div class="row">
			@try
			{
				foreach (var news in newsList)
				{
					<div class="col-md-3">
						<div class="news">
							<div class="date">@news.Date</div>
							<h3><a href="@news.Link" target="_blank">@(news.Baslik.Length > 250 ? news.Baslik[..250] + "..." : news.Baslik)</a></h3>
							<a href="@news.Link" target="_blank">
								<img width="100%" src="@news.Image" alt="newsImage" />
							</a>
							<br />
							<br />
							<p>@(news.Detail.Length > 300 ? news.Detail[..300] + "..." : news.Detail)</p>
						</div>
					</div>
				}
			}
			catch (Exception)
			{
				//ignored
			}

		</div>
	</div>
</div>